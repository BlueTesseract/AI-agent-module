def mcts_expansion(node):
    if is_leaf(node):
        node.children = get_allowed_moves_nodes(node)
        node.uninitialized_children = get_allowed_moves_nodes(node)
        next_node = random_choice_and_remove_from_list(node.uninitialized_children)
        return next_node

    if node.uninitialized_children != []:
        next_node = random_choice_and_remove_from_list(node.uninitialized_children)
        return next_node
