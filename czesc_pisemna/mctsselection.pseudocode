def mcts_selection(node=root):
    if is_leaf(node) or is_uninitialized_child(node):
        return node

    current_max_node = None
    current_max = eval_func_min - 1
    for n in node.children:
        if eval_func(node) > current_max:
            current_max = eval_func(node)
            current_max_node = n

    return mcts_selection(current_max_node)

